
CREATE TABLE SyncModuleEntity (
    SyncType      INTEGER UNIQUE NOT NULL PRIMARY KEY,
    RequestUrl    TEXT    NOT NULL,
    RequestFilter TEXT,
    LastSyncDate  INTEGER,
    RequestType INTEGER,
    ModuleType INTEGER
);

selectAllSyncModuleEntity:
SELECT * FROM SyncModuleEntity;

selectBySyncModuleEntitySyncType:
SELECT * FROM SyncModuleEntity WHERE SyncType = ? AND ModuleType = ?;

insertSyncModuleEntity:
INSERT INTO SyncModuleEntity
VALUES ?;

insertOrReplaceSyncModuleEntity:
INSERT OR REPLACE INTO SyncModuleEntity
VALUES ?;

updateSyncModuleEntity:
UPDATE SyncModuleEntity SET
    RequestUrl = ?,
    RequestFilter = ?,
    LastSyncDate = ?
WHERE SyncType = ? AND ModuleType = ?;

deleteSyncModuleEntity:
DELETE FROM SyncModuleEntity WHERE SyncType = ? AND ModuleType = ?;