VALUES ?;

insertOrReplacePaymentTransactionLogInformationEntity:
INSERT OR REPLACE INTO PaymentTransactionLogInformationEntity
VALUES ?;

updatePaymentTransactionLogInformationEntity:
UPDATE PaymentTransactionLogInformationEntity SET
    TransactionDate = ?,
    CustomerId = ?,
    Amount = ?,
    Direction = ?,
    DocumentGroup = ?,
