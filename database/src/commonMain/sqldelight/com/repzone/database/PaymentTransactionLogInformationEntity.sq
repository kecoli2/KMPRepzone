CREATE TABLE IF NOT EXISTS PaymentTransactionLogInformationEntity (
    Id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    Amount REAL,
    CustomerId INTEGER,
    Direction INTEGER,
    DocumentGroup INTEGER,
    ReferenceId INTEGER,
    TransactionDate INTEGER
);

selectAllPaymentTransactionLogInformationEntity:
SELECT * FROM PaymentTransactionLogInformationEntity;

selectByPaymentTransactionLogInformationEntityId:
SELECT * FROM PaymentTransactionLogInformationEntity WHERE Id = ?;

