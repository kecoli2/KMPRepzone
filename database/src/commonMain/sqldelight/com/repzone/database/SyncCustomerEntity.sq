CREATE TABLE IF NOT EXISTS SyncCustomerEntity (
    Id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    Balance REAL,
    Blocked INTEGER,
    CheckRiskDispatch INTEGER,
    CheckRiskOnBalance INTEGER,
    CheckRiskOrder INTEGER,
    CheckRiskOrderProposal INTEGER,
    Code TEXT,
    DamagedReturnPriceType INTEGER,
    DispatchMonitoringAction INTEGER,
    GroupId INTEGER,
    GroupName TEXT,
    GroupPhotoPath TEXT,
    IconIndex INTEGER,
    InvoiceMonitoringAction INTEGER,
    IsECustomer INTEGER,
    IsVatExempt INTEGER,
    IsVisible INTEGER,
    Name TEXT,
    OrderMonitoringAction INTEGER,
    OrderProposalMonitoringAction INTEGER,
    OrganizationCode TEXT,
    OrganizationId INTEGER,
    OrganizationName TEXT,
    ParentId INTEGER,
    PaymentPlanId INTEGER,
    PhotoPath TEXT,
    ReturnPriceType INTEGER,
    Risk REAL,
    RiskDueDay INTEGER,
    State INTEGER,
    Tags TEXT,
    TaxNumber TEXT,
    TaxOffice TEXT
);

selectAllSyncCustomerEntity:
SELECT * FROM SyncCustomerEntity;

selectBySyncCustomerEntityId:
SELECT * FROM SyncCustomerEntity WHERE Id = ?;

insertSyncCustomerEntity:
INSERT INTO SyncCustomerEntity
VALUES ?;

insertOrReplaceSyncCustomerEntity:
INSERT OR REPLACE INTO SyncCustomerEntity
VALUES ?;

updateSyncCustomerEntity:
UPDATE SyncCustomerEntity SET
    Code = ?,
    Name = ?,
    TaxOffice = ?,
    TaxNumber = ?,
    Tags = ?,
    GroupId = ?,
    GroupName = ?,
    PhotoPath = ?,
    IsECustomer = ?,
    OrganizationId = ?,
    OrganizationName = ?,
    OrganizationCode = ?,
    Risk = ?,
    Balance = ?,
    RiskDueDay = ?,
    GroupPhotoPath = ?,
    ParentId = ?,
    PaymentPlanId = ?,
    CheckRiskOnBalance = ?,
    CheckRiskDispatch = ?,
    CheckRiskOrder = ?,
    CheckRiskOrderProposal = ?,
    InvoiceMonitoringAction = ?,
    DispatchMonitoringAction = ?,
    OrderMonitoringAction = ?,
    OrderProposalMonitoringAction = ?,
    Blocked = ?,
    IsVatExempt = ?,
    ReturnPriceType = ?,
    DamagedReturnPriceType = ?,
    IconIndex = ?,
    IsVisible = ?,
    State = ?
WHERE Id = ?;

deleteSyncCustomerEntity:
DELETE FROM SyncCustomerEntity WHERE Id = ?;
